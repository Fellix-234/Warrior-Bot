# ===================================
# WARRIOR BOT - ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and configure your settings

# ============ BOT CONFIGURATION ============
# Bot name displayed in messages
BOT_NAME=Warrior Bot

# Command prefix (default: .)
PREFIX=.

# Owner's WhatsApp number (with country code, no spaces or +)
# Example: 254712345678
OWNER_NUMBER=2547391914

# Owner's display name
OWNER_NAME=Warrior Felix

# ============ SESSION & PAIRING ============
# Optional: Phone number for auto-pairing mode (cloud deployment)
# Format: without + or spaces, e.g., 254712345678
# Leave empty to use QR code mode instead
PAIRING_NUMBER=

# Session ID (generated automatically, do not modify manually)
SESSION_ID=

# ============ MEDIA SETTINGS ============
# Enable video note for .alive command (true/false)
ENABLE_VIDEO_NOTE=false

# Video note URL for .alive command (MP4 format recommended)
# Can be a local path or remote URL
VIDEO_NOTE_URL=./assets/alive_note.mp4

# ============ CHANNEL & LINKS ============
# Your WhatsApp channel URL (optional)
CHANNEL_URL=https://whatsapp.com/channel/your_channel_id

# ============ SERVER SETTINGS ============
# Port for web UI (default: 3000)
PORT=3000

# ============ DEPLOYMENT ============
# Set to 'true' when deploying to cloud
# This affects logging and connection behavior
# CLOUD_DEPLOYMENT=true
